{
  "name": "bida-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "build": "run-p build:app build:lambda && yarn build:analysis",
    "build:analysis": "mkdir build -p build/.dev && source-map-explorer 'build/static/js/*.js' --html > build/.dev/bundle-analysis.html",
    "build:app": "yarn type-check && NODE_ENV=production react-scripts build",
    "build:lambda": "netlify-lambda build src/lambda --config ./webpack.functions.js",
    "build:schema": "yarn ts scripts/build-schema.js",
    "codegen": "yarn codegen:graphql",
    "codegen:graphql": "graphql-codegen --config graphql-codegen.yml",
    "eslint": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx",
    "initialize": "[ ! -f ./.env ] && cp .env.sample .env || true",
    "postinstall": "patch-package && yarn initialize && yarn codegen",
    "lint": "run-p lint:**",
    "lint:scripts": "yarn eslint src",
    "lint:styles": "stylelint src",
    "pull-request": "node ./scripts/pull-request.js",
    "qa": "run-p lint type-check test",
    "start": "run-p start:**",
    "start:app": "react-scripts start",
    "start:lambda": "netlify-lambda serve src/lambda --config ./webpack.functions.js",
    "storybook:build": "build-storybook -s public",
    "storybook:start": "start-storybook -p 9009 -s public",
    "test": "jest",
    "ts": "ts-node -r dotenv/config -O '{ \"isolatedModules\": false, \"module\": \"commonjs\" }' ",
    "type-check": "tsc -p tsconfig.production.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "node ./scripts/stashed.js 'yarn qa'"
    }
  },
  "lint-staged": {
    "ignore": [
      "**/graphql-types.ts",
      "**/graphql-types/*"
    ],
    "linters": {
      "*.md": [
        "node ./scripts/toc.js",
        "git add README.md"
      ],
      "*.{ts,tsx}": [
        "prettier-eslint --write",
        "stylelint",
        "git add"
      ],
      "package.json": [
        "yarn sort-package-json",
        "git add"
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": "@strv/prettier-config",
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/jest.setup.ts"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.0.0-beta.44",
    "@octokit/auth-app": "^2.4.5",
    "@octokit/graphql-schema": "^7.7.1",
    "@octokit/rest": "^17.5.1",
    "@rehooks/local-storage": "^2.3.0",
    "apollo-link": "^1.2.14",
    "apollo-link-context": "^1.0.20",
    "apollo-link-dedup": "^1.0.21",
    "apollo-link-http": "^1.5.17",
    "apollo-server-lambda": "^2.12.0",
    "aws-lambda": "^1.0.5",
    "dataloader": "^1.4.0",
    "debug": "^4.1.1",
    "graphql": "^15.0.0",
    "graphql-resolvers": "^0.3.2",
    "graphql-tag": "^2.10.0",
    "graphql-tools": "^5.0.0",
    "history": "^4.9.0",
    "isomorphic-fetch": "^2.2.1",
    "mem": "^4.3.0",
    "netlify-auth-providers": "^1.0.0-alpha5",
    "patch-package": "^6.1.2",
    "postinstall-postinstall": "^2.0.0",
    "prop-types": "^15.6.2",
    "ramda": "^0.26.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-error-boundary": "^1.2.3",
    "react-router": "^5.0.1",
    "react-router-dom": "^4.3.1",
    "react-virtualized": "^9.21.0",
    "semver": "^5.6.0",
    "styled-components": "^4.1.1",
    "styled-system": "^2.2.1",
    "ts-toolbelt": "^6.5.1",
    "tsdef": "^0.0.13",
    "utility-types": "^3.6.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@graphql-codegen/cli": "^1.13.3",
    "@graphql-codegen/fragment-matcher": "^1.13.3",
    "@graphql-codegen/typescript": "^1.13.3",
    "@graphql-codegen/typescript-operations": "^1.13.3",
