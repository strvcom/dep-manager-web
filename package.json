    "source-map-explorer": "^1.8.0",
    "storybook-react-router": "^1.0.5",
    "storybook-styled-components": "^1.1.3",
    "stylelint": "^9.9.0",
    "ts-loader": "^5.3.1",
    "ts-node": "^8.0.3",
    "typescript": "^3.8.3",
    "typescript-styled-plugin": "^0.13.0",
    "uuid": "^3.3.2",
    "webpack-node-externals": "^1.7.2"
  },
  "resolutions": {
    "caniuse-lite": "1.0.30000957",
    "eslint-plugin-react": "^7.12.4",
    "graphql": "15.0.0",
    "graphql-tools": "5.x.x",
    "react": "16.13.1"
  }
}
